{% set links = {
    'backups':   'Backups',
    'databases': 'Databases',
    'users':     'Users',
} %}

<header class="mb-3">
    <nav class="flex items-center flex-wrap py-6">
        <div class="w-full flex justify-between items-center mb-3">
            <div class="flex items-center flex-shrink-0 text-white mr-6">
                <span class="font-semibold tracking-tight text-2xl md:text-4xl text-blue-500">Slim Database Backups</span>
            </div>
        </div>
        <div class="w-full flex justify-between items-center">
            <div class="text-xl text-gray-800">
                {% for route, title in links %}
                    <a href="{{ url_for(route) }}"
                       class="bg-gray-300 px-3 py-1 text-sm uppercase font-semibold block mt-4 lg:inline-block lg:mt-0{{ not loop.last ? ' mr-4' : '' }}{{ is_current_url(route) ? ' bg-blue-200 text-blue-800' : ' hover:bg-gray-400 hover:text-black' }}">
                        {{ title }}
                    </a>
                {% endfor %}
            </div>
            <div>
                <form id="logoutForm" action="{{ url_for('logout') }}" method="post">
                    {{ csrf() }}
                    <a href="#" class="bg-gray-600 hover:bg-gray-700 px-3 py-1 text-gray-200 text-sm uppercase font-semibold block mt-4 lg:inline-block lg:mt-0"
                       onclick="document.getElementById('logoutForm').submit()">Logout</a>
                </form>
            </div>
        </div>
    </nav>
</header>